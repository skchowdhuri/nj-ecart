<%- include('../_layouts/adminheader')%>


<h2 class="page-title">Add a page</h2>
<a href="/admin/categories" class="btn btn-primary">Back to all categories</a><br><br><br><br>
<!-- Form to add pages -->
<form method="POST" action="/admin/categories/edit/<%= slug%>">
    <div class="form-group row">
      <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input type="text" name="title" value="<%=title%>" class="form-control" id="inputTitle" placeholder="Title">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputSlug" class="col-sm-2 col-form-label">Slug</label>
      <div class="col-sm-10">
        <input type="text" name="slug" value="<%=slug%>" class="form-control" id="inputSlug" placeholder="Slug">
      </div>
    </div>
      <input type="hidden" name="id" value="<%=id%>">
      <button type="submit" class="btn btn-success">Submit</button>
  </form>

<%- include('../_layouts/adminfooter') %>