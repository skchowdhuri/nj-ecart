<%- include('../_layouts/adminheader')%>


<h2 class="page-title">Add a page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a><br><br><br><br>
<!-- Form to add pages -->
<form method="POST" action="/admin/pages/edit/<%= slug%>">
    <div class="form-group row">
      <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input type="text" name="title" value="<%=title%>" class="form-control" id="inputTitle" placeholder="Title">
      </div>
    </div>
    <div class="form-group row">
        <label for="inputSlug" class="col-sm-2 col-form-label">Slug</label>
        <div class="col-sm-10">
          <input type="text" name="slug" value="<%=slug%>" class="form-control" id="inputSlug" placeholder="Slug">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputContent" class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-10">
          <textarea type="text" name="content" id="ta" class="form-control ck-editor__editable" id="inputContent" placeholder="Content" rows="10"><%=content%></textarea>
        </div>
      </div>
      <input type="hidden" name="id" value="<%=id%>">
      <button type="submit" class="btn btn-success">Submit</button>
  </form>

<%- include('../_layouts/adminfooter') %>