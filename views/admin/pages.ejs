<%- include('../_layouts/adminheader')%>


<h2 class="page-title">Pages</h2>
<a href="/admin/pages/add" class="btn btn-primary">Add a page</a><br><br><br><br>
<!-- Form to add pages -->
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% pages.forEach((page)=>{ %>
    <tr>
      <th scope="row"><%= page.title %></th>
      <td><a href="/admin/pages/edit/<%=page.slug%>" class="btn btn-warning btn-sm">Edit</a></td>
      <%if(page.slug==='home'){%>
        <td></td>
      <%} else{%>
        <td><a href="/admin/pages/delete/<%=page._id%>" class="btn btn-danger btn-sm" id="delete-button">Delete</a></td>
      <%}%>
    </tr>
    <%});%>
  </tbody>
</table>

<%- include('../_layouts/adminfooter') %>